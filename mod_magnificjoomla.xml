<?xml version="1.0" encoding="UTF-8"?>
<extension type="module" version="3.0" client="site" method="upgrade">

	<name>Tristan's Magnific Popup Responsive Lightbox</name>
	<author>Tristan Brookes</author>
	<creationDate>June 2013</creationDate>
	<copyright>Copyright (C) 2013 Tristan Brookes</copyright>
	<license>GNU General Public License version 2 or later</license>
	<authorEmail>extensions@tristanbrook.es</authorEmail>
	<authorURL>https://tristanbrook.es</authorURL>
	<version>0.3.4</version>
	<description>A simple Joomla version of the Magnific Popup responsive lightbox from http://dimsemenov.com/plugins/magnific-popup. Magnific is licensed under the MIT License and as such, here's a link to that: http://opensource.org/licenses/MIT.</description>

	<files>
		<filename>mod_magnificjoomla.xml</filename>
		<filename module="mod_magnificjoomla">mod_magnificjoomla.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<folder>tmpl</folder>
		<folder>language</folder>
		<folder>assets</folder>
	</files>

	<languages>
		<language tag="en-GB">language/en-GB/en-GB.mod_magnificjoomla.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.mod_magnificjoomla.sys.ini</language>
	</languages>

  <updateservers>
		<server type="extension" name="mod_tristans_responsive_slider" priority="1">https://tristanbrook.es/assets/files/mod_magnific_update.xml</server>
	</updateservers>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="module_mode" type="radio" default="images" label="MOD_MAGNIFICJOOMLA_MODULE_MODE_LABEL" description="MOD_MAGNIFICJOOMLA_MODULE_MODE_DESC">
					<option value="images">Images</option>
					<option value="video">Video</option>
				</field>
			</fieldset>

			<fieldset name="images" label="MOD_MAGNIFICJOOMLA_IMAGES_LABEL">
				<field name="thumb1" type="media" directory="images" label="MOD_MAGNIFICJOOMLA_THUMBNAIL_LABEL" />
				<field name="large1" type="media" directory="images" label="MOD_MAGNIFICJOOMLA_LARGE_LABEL" />
				<field name="caption1" type="textarea" default="" label="MOD_MAGNIFICJOOMLA_CAPTION_LABEL" description="MOD_MAGNIFICJOOMLA_CAPTION_DESC" rows="2" />

				<field name="myspacer1" type="spacer" hr="true" />

				<field name="thumb2" type="media" directory="images" label="MOD_MAGNIFICJOOMLA_THUMBNAIL_LABEL" />
				<field name="large2" type="media" directory="images" label="MOD_MAGNIFICJOOMLA_LARGE_LABEL" />
				<field name="caption2" type="textarea" default="" label="MOD_MAGNIFICJOOMLA_CAPTION_LABEL" description="MOD_MAGNIFICJOOMLA_CAPTION_DESC" rows="2" />

				<field name="myspacer2" type="spacer" hr="true" />

				<field name="thumb3" type="media" directory="images" label="MOD_MAGNIFICJOOMLA_THUMBNAIL_LABEL" />
				<field name="large3" type="media" directory="images" label="MOD_MAGNIFICJOOMLA_LARGE_LABEL" />
				<field name="caption3" type="textarea" default="" label="MOD_MAGNIFICJOOMLA_CAPTION_LABEL" description="MOD_MAGNIFICJOOMLA_CAPTION_DESC" rows="2" />

				<field name="myspacer3" type="spacer" hr="true" />

				<field name="thumb4" type="media" directory="images" label="MOD_MAGNIFICJOOMLA_THUMBNAIL_LABEL" />
				<field name="large4" type="media" directory="images" label="MOD_MAGNIFICJOOMLA_LARGE_LABEL" />
				<field name="caption4" type="textarea" default="" label="MOD_MAGNIFICJOOMLA_CAPTION_LABEL" description="MOD_MAGNIFICJOOMLA_CAPTION_DESC" rows="2" />

				<field name="myspacer4" type="spacer" hr="true" />

				<field name="thumb5" type="media" directory="images" label="MOD_MAGNIFICJOOMLA_THUMBNAIL_LABEL" />
				<field name="large5" type="media" directory="images" label="MOD_MAGNIFICJOOMLA_LARGE_LABEL" />
				<field name="caption5" type="textarea" default="" label="MOD_MAGNIFICJOOMLA_CAPTION_LABEL" description="MOD_MAGNIFICJOOMLA_CAPTION_DESC" rows="2" />

				<field name="myspacer5" type="spacer" hr="true" />

				<field name="thumb6" type="media" directory="images" label="MOD_MAGNIFICJOOMLA_THUMBNAIL_LABEL" />
				<field name="large6" type="media" directory="images" label="MOD_MAGNIFICJOOMLA_LARGE_LABEL" />
				<field name="caption6" type="textarea" default="" label="MOD_MAGNIFICJOOMLA_CAPTION_LABEL" description="MOD_MAGNIFICJOOMLA_CAPTION_DESC" rows="2" />

				<field name="myspacer6" type="spacer" hr="true" />

				<field name="thumb7" type="media" directory="images" label="MOD_MAGNIFICJOOMLA_THUMBNAIL_LABEL" />
				<field name="large7" type="media" directory="images" label="MOD_MAGNIFICJOOMLA_LARGE_LABEL" />
				<field name="caption7" type="textarea" default="" label="MOD_MAGNIFICJOOMLA_CAPTION_LABEL" description="MOD_MAGNIFICJOOMLA_CAPTION_DESC" rows="2" />

				<field name="myspacer7" type="spacer" hr="true" />

				<field name="thumb8" type="media" directory="images" label="MOD_MAGNIFICJOOMLA_THUMBNAIL_LABEL" />
				<field name="large8" type="media" directory="images" label="MOD_MAGNIFICJOOMLA_LARGE_LABEL" />
				<field name="caption8" type="textarea" default="" label="MOD_MAGNIFICJOOMLA_CAPTION_LABEL" description="MOD_MAGNIFICJOOMLA_CAPTION_DESC" rows="2" />

				<field name="myspacer8" type="spacer" hr="true" />

				<field name="thumb9" type="media" directory="images" label="MOD_MAGNIFICJOOMLA_THUMBNAIL_LABEL" />
				<field name="large9" type="media" directory="images" label="MOD_MAGNIFICJOOMLA_LARGE_LABEL" />
				<field name="caption9" type="textarea" default="" label="MOD_MAGNIFICJOOMLA_CAPTION_LABEL" description="MOD_MAGNIFICJOOMLA_CAPTION_DESC" rows="2" />

				<field name="myspacer9" type="spacer" hr="true" />

				<field name="thumb10" type="media" directory="images" label="MOD_MAGNIFICJOOMLA_THUMBNAIL_LABEL" />
				<field name="large10" type="media" directory="images" label="MOD_MAGNIFICJOOMLA_LARGE_LABEL" />
				<field name="caption10" type="textarea" default="" label="Caption" description="MOD_MAGNIFICJOOMLA_CAPTION_DESC" rows="2" />

				<field name="myspacer10" type="spacer" hr="true" />
			</fieldset>

			<fieldset name="video" label="MOD_MAGNIFICJOOMLA_VIDEO_LABEL">
				<field name="url" type="url" default="" label="MOD_MAGNIFICJOOMLA_URL_LABEL" description="MOD_MAGNIFICJOOMLA_URL_DESC"/>
				<field name="vidthumbnail" type="radio" default="0" label="MOD_MAGNIFICJOOMLA_THUMB_LABEL" description="MOD_MAGNIFICJOOMLA_THUMB_DESC">
					<option value="0">No Thumbnail (Text Entry)</option>
					<option value="1">Use Thumbnail (Use image chooser)</option>
				</field>
				<field name="textnail" type="text" default="" label="MOD_MAGNIFICJOOMLA_THUMBTEXT_LABEL" description="MOD_MAGNIFICJOOMLA_THUMBTEXT_DESC"/>
				<field name="videothumb" type="media" directory="images" label="MOD_MAGNIFICJOOMLA_THUMBIMAGE_LABEL" description="MOD_MAGNIFICJOOMLA_THUMBIMAGE_DESC"/>
			</fieldset>

			<fieldset name="advanced">
				<field name="layout" type="modulelayout" label="JFIELD_ALT_LAYOUT_LABEL"
				description="JFIELD_ALT_MODULE_LAYOUT_DESC"/>
				<field name="moduleclass_sfx" type="text" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
				description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"/>
				<field name="cache" type="list" default="1" label="COM_MODULES_FIELD_CACHING_LABEL"
				description="COM_MODULES_FIELD_CACHING_DESC">
					<option value="1">JGLOBAL_USE_GLOBAL</option>
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
				<field name="cache_time" type="text" default="900"
				label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
				description="COM_MODULES_FIELD_CACHE_TIME_DESC"/>
				<field name="cachemode" type="hidden" default="itemid">
					<option value="itemid"></option>
				</field>
			</fieldset>
		</fields>

	</config>

</extension>
