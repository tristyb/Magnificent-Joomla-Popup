<?xml version="1.0" encoding="UTF-8"?>
<extension type="module" version="2.5" client="site" method="upgrade">

	<name>Tristan's Magnific Popup Module</name>
	<author>Tristan Brookes</author>
	<creationDate>June 2013</creationDate>
	<copyright>Copyright (C) 2013 Tristan Brookes</copyright>
	<license>GNU General Public License version 2 or later</license>
	<authorEmail>tristan@tristan-brookes.co.uk</authorEmail>
	<authorURL>http://www.tristan-brookes.co.uk</authorURL>
	<version>0.1</version>
	<description>A simple Joomla adaptation of magnific popup found at http://dimsemenov.com/plugins/magnific-popup/. Support for up to ten images.</description>

	<files>
		<filename>mod_magnificJoomla.xml</filename>
		<filename module="mod_magnificJoomla">mod_magnificJoomla.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<folder>tmpl</folder>
		<folder>assets</folder>
	</files>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="use_jquery" type="radio" label="Use built-in jQuery?" description="Whether you want this module to load jQuery or you're doing it in your template">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
			</fieldset>

			<fieldset name="images" label="Images">
				<field name="thumb1" type="media" directory="images" />
				<field name="large1" type="media" directory="images" />
				<field name="caption1" type="textarea" default="" label="Caption" description="A caption if you want to use one" rows="2" />

				<field name="myspacer1" type="spacer" hr="true" />

				<field name="thumb2" type="media" directory="images" />
				<field name="large2" type="media" directory="images" />
				<field name="caption2" type="textarea" default="" label="Caption" description="A caption if you want to use one" rows="2" />

				<field name="myspacer2" type="spacer" hr="true" />

				<field name="thumb3" type="media" directory="images" />
				<field name="large3" type="media" directory="images" />
				<field name="caption3" type="textarea" default="" label="Caption" description="A caption if you want to use one" rows="2" />

				<field name="myspacer3" type="spacer" hr="true" />

				<field name="thumb4" type="media" directory="images" />
				<field name="large4" type="media" directory="images" />
				<field name="caption4" type="textarea" default="" label="Caption" description="A caption if you want to use one" rows="2" />

				<field name="myspacer4" type="spacer" hr="true" />

				<field name="thumb5" type="media" directory="images" />
				<field name="large5" type="media" directory="images" />
				<field name="caption5" type="textarea" default="" label="Caption" description="A caption if you want to use one" rows="2" />

				<field name="myspacer5" type="spacer" hr="true" />

				<field name="thumb6" type="media" directory="images" />
				<field name="large6" type="media" directory="images" />
				<field name="caption6" type="textarea" default="" label="Caption" description="A caption if you want to use one" rows="2" />

				<field name="myspacer6" type="spacer" hr="true" />

				<field name="thumb7" type="media" directory="images" />
				<field name="large7" type="media" directory="images" />
				<field name="caption7" type="textarea" default="" label="Caption" description="A caption if you want to use one" rows="2" />

				<field name="myspacer7" type="spacer" hr="true" />

				<field name="thumb8" type="media" directory="images" />
				<field name="large8" type="media" directory="images" />
				<field name="caption8" type="textarea" default="" label="Caption" description="A caption if you want to use one" rows="2" />

				<field name="myspacer8" type="spacer" hr="true" />

				<field name="thumb9" type="media" directory="images" />
				<field name="large9" type="media" directory="images" />
				<field name="caption9" type="textarea" default="" label="Caption" description="A caption if you want to use one" rows="2" />

				<field name="myspacer9" type="spacer" hr="true" />

				<field name="thumb10" type="media" directory="images" />
				<field name="large10" type="media" directory="images" />
				<field name="caption10" type="textarea" default="" label="Caption" description="A caption if you want to use one" rows="2" />

				<field name="myspacer10" type="spacer" hr="true" />
			</fieldset>

			<fieldset name="advanced">
				<field name="layout" type="modulelayout" label="JFIELD_ALT_LAYOUT_LABEL"
				description="JFIELD_ALT_MODULE_LAYOUT_DESC"/>
				<field name="moduleclass_sfx" type="text" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
				description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"/>
				<field name="cache" type="list" default="1" label="COM_MODULES_FIELD_CACHING_LABEL"
				description="COM_MODULES_FIELD_CACHING_DESC">
					<option value="1">JGLOBAL_USE_GLOBAL</option>
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
				<field name="cache_time" type="text" default="900" 
				label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
				description="COM_MODULES_FIELD_CACHE_TIME_DESC"/>
				<field name="cachemode" type="hidden" default="itemid">
					<option value="itemid"></option>
				</field>
			</fieldset>
		</fields>

	</config>

</extension>